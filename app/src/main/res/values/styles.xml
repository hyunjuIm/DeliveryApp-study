<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Delivery.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white</item>
        <item name="android:title">@null</item>
    </style>

    <style name="Widget.Delivery.Toolbar.WithArrow" parent="Widget.Delivery.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Delivery.Toolbar.WithClose" parent="Widget.Delivery.Toolbar">
        <item name="navigationIcon">@drawable/ic_close</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.Delivery.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/brown</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/bg_filter_chip_state_list</item>
        <item name="android:textColor">@color/text_filter_chip_state_list</item>
        <item name="textStartPadding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipIconTint">@color/icon_filter_chip_state_list_reset</item>
        <item name="chipIconSize">12dp</item>
        <item name="iconStartPadding">6dp</item>
        <item name="chipEndPadding">2dp</item>
    </style>

    <style name="Widget.Delivery.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/brown</item>
    </style>

    <style name="Widget.Delivery.DarkPinkButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_round_corner_6_dark_pink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Widget.Delivery.DarkPinkLineButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_round_corner_6_white_line_dark_pink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_pink</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>