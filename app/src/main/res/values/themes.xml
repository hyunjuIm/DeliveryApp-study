<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeliveryApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="toolbarStyle">@style/Widget.Delivery.Toolbar</item>
        <item name="toolbarWithArrowStyle">@style/Widget.Delivery.Toolbar.WithArrow</item>
        <item name="toolbarWithCloseStyle">@style/Widget.Delivery.Toolbar.WithClose</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.DeliveryApp">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:background">@null</item>
    </style>
</resources>